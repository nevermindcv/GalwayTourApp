<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:map="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:layout_width="match_parent"
    >

<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.galwaytour2.allMaps" />

<Button
    android:id="@+id/allmapsatellitebtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:text="Satellite" />

<Button
    android:id="@+id/allmaphybredbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/allmapsatellitebtn"
    android:layout_alignRight="@+id/allmapsatellitebtn"
    android:layout_below="@+id/allmapsatellitebtn"
    android:text="Hybred" />

<Button
    android:id="@+id/allmapnormalbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/allmaphybredbtn"
    android:layout_alignLeft="@+id/allmaphybredbtn"
    android:layout_below="@+id/allmaphybredbtn"
    android:text="Normal" />


</RelativeLayout>