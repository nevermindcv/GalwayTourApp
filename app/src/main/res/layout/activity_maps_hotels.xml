
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:map="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:layout_width="match_parent"
    >

<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.galwaytour2.MapsHotels" />

<Button
    android:id="@+id/hotelsatellitebtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:text="Satellite" />

<Button
    android:id="@+id/hotelhybredbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignEnd="@+id/hotelsatellitebtn"
    android:layout_alignRight="@+id/hotelsatellitebtn"
    android:layout_below="@+id/hotelsatellitebtn"
    android:text="Hybred" />

<Button
    android:id="@+id/hotelnormalbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/hotelhybredbtn"
    android:layout_alignLeft="@+id/hotelhybredbtn"
    android:layout_below="@+id/hotelhybredbtn"
    android:text="Normal" />


</RelativeLayout>