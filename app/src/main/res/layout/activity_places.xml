<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.galwaytour2.PlacesActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="375dp">

                <TextView
                    android:id="@+id/abbeyTitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/abbeyIV"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="-41dp"
                    android:layout_marginStart="23dp"
                    android:text="Kylemore Abbey"
                    android:textColor="#131313"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/abbeyTV"
                    android:layout_width="233dp"
                    android:layout_height="347dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:text="Looking for the perfect day out in the West of Ireland?  Well in that case look no further than Kylemore Abbey and Victorian Walled Garden, one of Irelandâ€™s best loved and most iconic tourist attractions and home to the Benedictine nuns since 1920. At Kylemore Abbey and Victorian Walled Garden, there is so much for all the family to enjoy. Visit the restored rooms of the Abbey and learn about its history of tragedy, romance, education, innovation and spirituality. Explore the 6 acre Victorian Walled Garden with its delightfully restored  garden buildings. Discover woodland and lakeshore walks that will take you on a beautiful journey through our 1,000 acre estate."
                    tools:layout_editor_absoluteX="252dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageView
                    android:id="@+id/abbeyIV"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="54dp"
                    app:srcCompat="@drawable/connemara" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="185dp">

                <TextView
                    android:id="@+id/nicholasTV"
                    android:layout_width="234dp"
                    android:layout_height="140dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:text="Galway is a lovely port city brimming with history, and this church is in the heart of the city. It is easy to find, free and beautiful. It is rumored that Columbus prayed here before sailing to North America. A beautiful place to see amidst the rest of Galway." />

                <TextView
                    android:id="@+id/nicholasTitleTV"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/nicholasTV"
                    android:layout_marginStart="19dp"
                    android:text="St. Nicholas' Church"
                    android:textColor="#131313"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/nicholasIV"
                    android:layout_width="107dp"
                    android:layout_height="75dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/nicholasTitleTV"
                    android:layout_marginBottom="41dp"
                    app:srcCompat="@drawable/snc" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="168dp">

                <TextView
                    android:id="@+id/blackrockTV"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:text="This place appears in iconic images of Galway, you need to see and experience it multiple times to appreciate what it means to Galwegians. The beach at Salthill is very nice. A bit narrow perhaps but the walk on the prom is worthwhile. Always a busy spot to visit even off season." />

                <TextView
                    android:id="@+id/blackrockTitleTV"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="13dp"
                    android:text="Black Rock"
                    android:textColor="#131313"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/blackrockIV"
                    android:layout_width="110dp"
                    android:layout_height="75dp"
                    android:layout_alignStart="@+id/blackrockTitleTV"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/blackrock"
                    tools:layout_editor_absoluteX="205dp"
                    tools:layout_editor_absoluteY="45dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="296dp">

                <TextView
                    android:id="@+id/GalwayCathedralTitleTV"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/GalwayCathedralTV"
                    android:layout_marginStart="18dp"
                    android:text="Galway Cathedral"
                    android:textColor="#131313"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/GalwayCathedralTV"
                    android:layout_width="234dp"
                    android:layout_height="275dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="10dp"
                    android:text="Rising over the River Corrib, imposing Galway Cathedral was dedicated by the late Cardinal Richard Cushing of Boston in 1965. The interior is fantastic, with a beautifully decorated dome, attractive Romanesque arches, lovely mosaics and rough-hewn stonework emblazoned with copious stained glass. The superb acoustics are best appreciated during an organ recital; concert dates and ticket information are posted on the website. From the Spanish Arch, a riverside path runs upriver and across the Salmon Weir Bridge to the cathedral." />

                <ImageView
                    android:id="@+id/cathedralIV"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/GalwayCathedralTitleTV"
                    android:layout_marginTop="68dp"
                    app:srcCompat="@drawable/cathedral" />
            </RelativeLayout>

            <Button
                android:id="@+id/BtnMapsPlaces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See on Google Maps" />

            <ImageView
                android:id="@+id/placemapsIV"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                app:srcCompat="@drawable/maps" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
